<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size10dp"
    android:background="@color/white"
    android:elevation="@dimen/elevation5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/productThumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/size10dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/size12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/size12dp"
            android:layout_marginBottom="@dimen/txt16sp"
            android:layout_toEndOf="@+id/productThumb"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/txt14sp" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/txt12sp" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/txt14sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>